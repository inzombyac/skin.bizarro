<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="115">
    <defaultcontrol always="true">901</defaultcontrol>
    <visible>Window.IsActive(fullscreenvideo) + !Window.IsActive(script.pseudotv.TVOverlay.xml) + !Window.IsActive(script.pseudotv.live.TVOverlay.xml)</visible> 
    <visible>[VideoPlayer.IsFullscreen] + [Window.IsVisible(videoosd) | Window.IsVisible(fullscreeninfo) | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Player.ShowInfo | !String.IsEmpty(Window(home).Property(osdshowinfo)) | !Integer.IsGreater(Player.Time,5)]</visible>
    <zorder>0</zorder>
    <controls>
        <control type="group">
            <animation effect="slide" start="0" end="0,-74" time="150" condition="Window.IsVisible(videoosd)">Conditional</animation>
            <control type="group">
                <animation effect="slide" start="0" end="0,-190" time="150" condition="Window.IsVisible(fullscreeninfo) | Player.ShowInfo | !String.IsEmpty(Window(home).Property(osdshowinfo)) | Player.Paused">Conditional</animation>
                <animation effect="slide" start="0" end="0,110" time="150" condition="!Window.IsVisible(fullscreeninfo) + !Player.Seeking + !Player.DisplayAfterSeek + !Player.Paused + !Player.Forwarding + !Player.Rewinding + !Player.ShowInfo + String.IsEmpty(Window(home).Property(osdshowinfo))">Conditional</animation>
                <animation effect="slide" start="0,110" end="0" time="150">Visible</animation>
                <animation effect="slide" start="0,110" end="0" time="150">WindowOpen</animation>
                <control type="image">
                    <top>110r</top>
                    <width>100%</width>
                    <height>374</height>
                    <texture>common/white.png</texture>
                    <colordiffuse>$VAR[OSDPanel]</colordiffuse>
                    <animation effect="fade" start="100" end="90" condition="Skin.HasSetting(osd.usetheme)">Conditional</animation>
                    <include>Animation.FadeOut</include>
                </control>
            </control>
            <control type="group">
                <top>300r</top>
                <bottom>0</bottom>
                <width>100%</width>
                <visible>Window.IsVisible(fullscreeninfo) | Player.ShowInfo | !String.IsEmpty(Window(home).Property(osdshowinfo)) | Player.Paused | !Integer.IsGreater(Player.Time,5)</visible>
                <animation effect="fade" start="0" end="100" delay="150" time="150">Visible</animation>
                <animation effect="fade" start="0" end="100" delay="150" time="150">WindowOpen</animation>
				<control type="image">
					<description>background image</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>100%</width>
					<height>100%</height>
					<colordiffuse>$VAR[OSDPanel]</colordiffuse>
					<animation effect="fade" start="100" end="95" condition="Skin.HasSetting(osd.usetheme)">Conditional</animation>
					<texture border="16">common/rounded-shadow8.png</texture>
				</control>     
				<control type="group">
                    <left>SidePad</left>
                    <right>SidePad</right>
                    <top>20</top>
                    <bottom>20</bottom>
                    <control type="image">
                        <left>-70</left>
						<top>-226</top>
						<width>334</width>
						<height>486</height>
                        <texture>$VAR[PlayerPoster]</texture>
                        <visible>!VideoPlayer.Content(LiveTV) + [!String.IsEmpty(Player.Art(tvshow.poster)) | !String.IsEmpty(Player.Art(poster))]</visible>
                    </control>
					<control type="image">
                        <left>-70</left>
						<top>-226</top>
						<width>334</width>
						<height>486</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[VideoPlayer.Cover]</texture>
                        <visible>!VideoPlayer.Content(LiveTV)+ !String.IsEmpty(VideoPlayer.Cover)+ String.IsEmpty(Player.Art(tvshow.poster)) + String.IsEmpty(Player.Art(poster))</visible>
                    </control>                   
				   <control type="image">
                        <width>260</width>
                        <height>260</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Player.Art(thumb)]</texture>
                        <visible>VideoPlayer.Content(LiveTV) + !String.IsEmpty(Player.Art(thumb))</visible>
                    </control>  
                    <control type="group">
                        <left>290</left>
                        <visible>VideoPlayer.Content(LiveTV) + !String.IsEmpty(Player.Art(thumb))</visible>
                        <include>OSDInfoContent</include>
                    </control> 
                    <control type="group">
                        <left>290</left>
                        <visible>!VideoPlayer.Content(LiveTV) + [!String.IsEmpty(Player.Art(tvshow.poster)) | !String.IsEmpty(Player.Art(poster)) | !String.IsEmpty(VideoPlayer.Cover)]</visible>
                        <include>OSDInfoContent</include>
                    </control>  
                    <control type="group">
                        <left>0</left>
                        <visible>String.IsEmpty(Player.Art(tvshow.poster)) + String.IsEmpty(Player.Art(poster)) + !VideoPlayer.Content(LiveTV)+ String.IsEmpty(VideoPlayer.Cover)</visible>
                        <include>OSDInfoContent</include>
                    </control>
                </control>
            </control>
            <control type="group">
                <visible>!Player.Paused</visible>
                <visible>!Window.IsVisible(fullscreeninfo) + !Player.ShowInfo + String.IsEmpty(Window(home).Property(osdshowinfo))</visible>
                <visible>Player.Seeking | Player.DisplayAfterSeek  | Player.Forwarding | Player.Rewinding</visible>
                <animation effect="fade" start="0" end="100" delay="150" time="150">Visible</animation>
                <animation effect="fade" start="0" end="100" delay="150" time="150">WindowOpen</animation>
                <top>110r</top>
                <bottom>0</bottom>
                <width>100%</width>
                <control type="group">
                    <left>SidePad</left>
                    <right>SidePad</right>
                    <top>20</top>
                    <bottom>20</bottom>              
				   <control type="label" description="Finishes Time">
                        <width>400</width>
                        <bottom>30</bottom>
                        <height>40</height>
                        <font>Tiny</font>
                        <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                        <label>$VAR[PlayerStatus]</label>
                    </control>
                    <control type="label" description="Duration Total Time">
                        <right>0</right>
                        <align>right</align>
                        <width>400</width>
                        <bottom>30</bottom>
                        <height>40</height>
                        <font>Tiny</font>
                        <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                        <label>$INFO[Player.Time]$INFO[Player.Duration,  /  ,]</label>
                    </control>
                    <control type="progress" description="cachelevel">
                        <description>Progress Bar</description>
                        <width>100%</width>
                        <bottom>10</bottom>
                        <height>8</height>
                        <info>Player.CacheLevel</info>
                        <texturebg colordiffuse="00ffffff">osd/progress-bg.png</texturebg>
                        <lefttexture colordiffuse="Dark3">osd/progress-end.png</lefttexture>
                        <midtexture colordiffuse="Dark3">osd/progress-end.png</midtexture>
                        <righttexture colordiffuse="Dark3">osd/progress-end.png</righttexture>
                        <visible>Player.Seeking</visible>
                    </control>
                    <control type="progress" description="cache">
                        <description>Progress Bar</description>
                        <width>100%</width>
                        <bottom>10</bottom>
                        <height>8</height>
                        <info>Player.ProgressCache</info>
                        <reveal>true</reveal>
                        <texturebg colordiffuse="00ffffff">osd/progress-bg.png</texturebg>
                         <lefttexture colordiffuse="Dark3">osd/progress-end.png</lefttexture>
                        <midtexture colordiffuse="Dark3">osd/progress-end.png</midtexture>
                        <righttexture colordiffuse="Dark3">osd/progress-end.png</righttexture>
                    </control>
                    <control type="progress" id="23">
                        <description>Progress Bar</description>
                        <width>100%</width>
                        <bottom>10</bottom>
                        <height>8</height>
                        <info>Player.Progress</info>
                       <!--  <visible>!Player.Seeking</visible> -->
                    </control>
                </control>
            </control>

            <control type="group">
                <visible>PVR.IsTimeshift</visible>
                <visible>false</visible>
                <animation effect="fade" start="0" end="100" delay="150" time="150">Visible</animation>
                <animation effect="fade" start="0" end="100" delay="150" time="150">WindowOpen</animation>
                <top>180r</top>
                <bottom>0</bottom>
                <width>100%</width>
                <control type="group">
                    <left>SidePad</left>
                    <right>SidePad</right>
                    <top>20</top>
                    <bottom>20</bottom>
                    <control type="label" description="Finishes Time">
                        <width>400</width>
                        <bottom>30</bottom>
                        <height>40</height>
                        <font>Tiny</font>
                        <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                        <label>$INFO[PVR.TimeshiftEnd]</label>
                    </control>
                    <control type="label" description="Duration Total Time">
                        <right>0</right>
                        <align>right</align>
                        <width>400</width>
                        <bottom>30</bottom>
                        <height>40</height>
                        <font>Tiny</font>
                        <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                        <label>$INFO[PVR.TimeshiftStart]</label>
                    </control>
                    <control type="progress" description="cachelevel">
                        <description>Progress Bar</description>
                        <width>100%</width>
                        <bottom>10</bottom>
                        <height>8</height>
                        <info>Player.CacheLevel</info>
                        <texturebg colordiffuse="00ffffff">osd/progress-bg.png</texturebg>
                        <lefttexture colordiffuse="EmbyGreen">osd/progress-end.png</lefttexture>
                        <midtexture colordiffuse="$VAR[ColourHighlight2]">osd/progress-end.png</midtexture>
                        <righttexture colordiffuse="$VAR[ColourHighlight2]">osd/progress-end.png</righttexture>
                        <visible>Player.Seeking</visible>
                    </control>
                    <control type="progress" description="cache">
                        <description>Progress Bar</description>
                        <width>100%</width>
                        <bottom>10</bottom>
                        <height>8</height>
                        <info>PVR.TimeshiftCur</info>
                        <reveal>true</reveal>
                        <texturebg colordiffuse="00ffffff">osd/progress-bg.png</texturebg>
                        <lefttexture colordiffuse="$VAR[ColourHighlight2]">osd/progress-end.png</lefttexture>
                        <midtexture colordiffuse="$VAR[ColourHighlight2]">osd/progress-end.png</midtexture>
                        <righttexture colordiffuse="$VAR[ColourHighlight2]">osd/progress-end.png</righttexture>
                    </control>
                    <control type="progress" id="23">
                        <description>Progress Bar</description>
                        <width>100%</width>
                        <bottom>10</bottom>
                        <height>8</height>
                        <info>PVR.TimeshiftProgress</info>
                    </control>
                </control>
            </control>
        </control>
        <!-- Clock -->
        <include>Furniture_OSDClock</include>
    </controls>
</window>
