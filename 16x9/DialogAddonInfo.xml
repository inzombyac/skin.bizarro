<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="146">
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <include>GlobalOverlay</include>
        <control type="group">
            <include>DefDialogInfoPanel</include>  
            <control type="image">
                <posx>30</posx>
                <top>100</top>
                <width>450</width>
                <height>274</height>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture diffuse="diffuse/pvrinfo.png" fallback="pvr/background.jpg">$INFO[ListItem.Art(fanart)]</texture>
            </control>           
            <control type="label">
                <description>Header Label</description>
                <include>DefDialogInfoHeader</include>
                <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="grouplist">
                <left>510</left>
                <right>30</right>
                <posy>112</posy>
                <orientation>vertical</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                <!-- Addon Name -->
                <control type="label">
                    <width>100%</width>
                    <height>25</height>
                    <font>SmallBold</font>
                    <label>[COLOR=Dark1]$INFO[ListItem.AddonVersion][/COLOR] by $INFO[ListItem.AddonCreator]</label>
                    <aligny>center</aligny>
                </control>                
                <!-- Summary -->
                <control type="textbox">
					<top>25</top>
					<width>100%</width>
                    <height>600</height>
                    <font>Tiny</font>
                    <aligny>top</aligny>
                    <label>$INFO[ListItem.AddonSummary,[B],[/B][CR]][COLOR=Dark2]$INFO[ListItem.AddonDescription][/COLOR][COLOR=Dark2][CR][/COLOR]$INFO[ListItem.AddonNews,[CR][CR]]</label>
					<autoscroll delay="5000" repeat="7500" time="5000">true</autoscroll>
                </control>
                
                <!-- Type -->
                <control type="label">
                    <height>25</height>
                    <font>Tiny</font>
                    <label>$LOCALIZE[564]$INFO[ListItem.AddonType,: ,]</label>
                    <aligny>center</aligny>
                </control>
            </control>


            <control type="grouplist" id="9000">
                <posx>30</posx>
                <width>450</width>
                <height>423</height>
                <bottom>30</bottom>
                <itemgap>3</itemgap>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <onright>50</onright>
                <onleft>50</onleft>
                <orientation>vertical</orientation>
                
                <control type="button" id="12">
                    <description>Launch</description>
                    <width>450</width>
                    <height>68</height>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
                    <include>DefDialogButtons</include>
                    <label>518</label>
                </control>
                
                <control type="button" id="6">
                    <description>Install/Uninstall Addon button</description>
                    <width>450</width>
                    <height>68</height>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
                    <include>DefDialogButtons</include>
                    <label>24022</label>
                    <visible>!Skin.HasSetting(global.kioskmode)</visible>
                </control>

                <control type="button" id="7">
                    <description>Enable/Disable Addon button</description>
                    <width>450</width>
                    <height>68</height>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
                    <include>DefDialogButtons</include>
                    <label>24021</label>   
                    <visible>!Skin.HasSetting(global.kioskmode)</visible> 
                </control>

                <control type="button" id="9">
                    <description>Addon Settings</description>
                    <width>450</width>
                    <height>68</height>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
                    <include>DefDialogButtons</include>
                    <label>24020</label>
                    <visible>!Skin.HasSetting(global.kioskmode)</visible>
                </control>

                <control type="button" id="8">
                    <description>Update Addon button</description>
                    <width>450</width>
                    <height>68</height>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
                    <include>DefDialogButtons</include>
                    <label>24069</label>
                    <visible>!Skin.HasSetting(global.kioskmode)</visible>
                </control>
				<control type="radiobutton" id="13">
                    <description>Auto-Update button</description>
                    <radioposx>400</radioposx>
					<width>450</width>
                    <height>68</height>
                    <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
                    <texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
					<include>DefDialogButtons</include>
                    <label>21340</label>
                    <visible>!Skin.HasSetting(global.kioskmode)</visible>
                </control>
            </control>
        </control>

    </controls>

</window>
