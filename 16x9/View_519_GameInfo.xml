<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
	<!-- Game info-->
	<include name="View_519_GameInfo">
		<description>Game View (id=519)</description>
		<control type="group">
			<include>Animation.Common</include>
			<visible>Control.IsVisible(519)</visible>
			<control type="group">
				<width>705</width>
				<height>850</height>
				<left>70</left>
				<control type="image">
					<top>160</top>
					<width>100%</width>
					<height>100%</height>
					<texture border="16" colordiffuse="Light2">common/box.png</texture>
				</control> 
				<control type="list" id="519">
					<visible>Container.Content(games) | Container.Content(programs) | String.IsEmpty(Container.Content)</visible>
					<top>300</top>
					<height>700</height>		
					<onleft condition="Control.IsVisible(60)">60</onleft>
					<onleft condition="!Control.IsVisible(60)">9000</onleft>
					<onright>519</onright>
					<onup condition="Player.HasMedia">7788</onup>
					<onup condition="!Player.HasMedia">519</onup>
					<ondown>519</ondown>
					<pagecontrol>60</pagecontrol>
					<viewtype label="31799">list</viewtype>
					<scrolltime tween="quadratic">400</scrolltime>
					<itemlayout width="700" height="64">
						<include>519itemlayout</include>
					</itemlayout>
					<focusedlayout width="700" height="64">
						<control type="group">
							<visible>Control.HasFocus(519)</visible>
							<include>519focuslayout</include>
						</control>
						<control type="group">
							<visible>!Control.HasFocus(519)</visible>
							<include>519itemlayout</include>
						</control>
					</focusedlayout>
				</control>
			</control>
			<control type="scrollbar" id="60">
				<onleft>3634</onleft>
				<onback>519</onback>
				<centerleft>55</centerleft>
				<posy>300</posy>
				<height>700</height>
				<width>8</width>
				<onright>519</onright>
				<texturesliderbackground border="4" colordiffuse="Dark4">scrollbar/scrollv.png</texturesliderbackground>
				<texturesliderbar border="4" colordiffuse="$VAR[ColorHighlight]">scrollbar/scrollv.png</texturesliderbar>
				<texturesliderbarfocus border="4" colordiffuse="$VAR[ColorHighlight]">scrollbar/scrollv.png</texturesliderbarfocus>
				<animation effect="fade" start="100" end="33" time="400" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
				<animation effect="slide" end="-30,0" time="400" condition="Control.HasFocus(60)">Conditional</animation>
			</control>
			<control type="group" description="Banner">
				<width>705</width>
				<left>70</left>
				<top>165</top>
				<control type="image">
					<height>130</height>
					<fadetime>100</fadetime>
					<aspectratio align="center" aligny="top" scalediffuse="false">keep</aspectratio>
					<texture background="true">$VAR[ClearLogoBanner]</texture>
				</control>
			</control>
			<include>519FanartView</include>
			<include>519PosterViewRight</include>
			<include>519BackViewRight</include>
			<include>519BigPosterViewRight</include>
			<control type="group">
				<control type="grouplist">
					<orientation>vertical</orientation>
					<left>800</left>
					<right>30</right>
					<top>660</top>
					<height>450</height>
					<width>600</width>
					<control type="label">
						<top>10</top>
						<aligny>center</aligny>
						<height>32</height>
						<font>MediumBold</font>
						<textcolor>Dark1</textcolor>
						<selectedcolor>Dark1</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<top>50</top>
						<aligny>center</aligny>
						<height>32</height>
						<font>TwentyEight</font>
						<textcolor>Dark1</textcolor>
						<selectedcolor>Dark1</selectedcolor>
						<label>$VAR[LabelDirector]</label>
					</control>
					<control type="label">
						<height>32</height>
						<aligny>center</aligny>
						<font>TwentyEight</font>
						<textcolor>Dark1</textcolor>
						<selectedcolor>Dark1</selectedcolor>
						<label>$VAR[LabelGenre]</label>
					</control>
					<control type="textbox">
						<align>justify</align>
						<font>TwentyEight</font>
						<textcolor>Dark1</textcolor>
						<selectedcolor>Dark1</selectedcolor>
						<label>$VAR[LabelPlotBox]</label>
						<height>235</height>
					</control>
				</control>
			</control>
		</control>
	</include>
	<include name="519focuslayout">
		<control type="button">
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onfocus>Skin.SetString(LastIcon,$VAR[PosterImage])</onfocus>
		</control>
		<control type="image">
			<width>100%</width>
			<height>100%</height>
			<texture border="8" colordiffuse="Dark1">common/box.png</texture>
			<bordertexture colordiffuse="$VAR[ColorHighlight]">common/white.png</bordertexture>
			<bordersize>6,0,0,0</bordersize>
		</control>
		<control type="image">
			<left>6</left>
			<width>1</width>
			<texture colordiffuse="Light1">common/black.png</texture>
		</control>
		<control type="label">
			<posx>30</posx>
			<width>auto</width>
			<aligny>center</aligny>
			<height>64</height>
			<font>Flag</font>
			<textcolor>Light1</textcolor>
			<selectedcolor>Light1</selectedcolor>
			<label>$INFO[ListItem.Label]</label>
			<scroll>true</scroll>
		</control>
	</include>
	<include name="519itemlayout">
		<control type="label">
			<posx>30</posx>
			<width>auto</width>
			<aligny>center</aligny>
			<height>64</height>
			<font>Flag</font>
			<label>$INFO[ListItem.Label]</label>
			<textcolor>Dark1</textcolor>
			<selectedcolor>Dark1</selectedcolor>
		</control>
	</include>
	<include name="519FanartView">
		<control type="group">
			<top>160</top>
			<left>800</left>
			<width>600</width>
			<height>PosterW</height>
			<visible>Control.IsVisible(519)</visible>
			<control type="image">
				<fadetime>200</fadetime>
				<aspectratio align="center" aligny="top" scalediffuse="false">scale</aspectratio>
				<texture background="true">$INFO[ListItem.Art(snap)]</texture>
				<visible>!String.IsEmpty(ListItem.Art(snap))</visible>
			</control>
			<control type="image">
				<fadetime>200</fadetime>
				<aspectratio align="center" aligny="top" scalediffuse="false">scale</aspectratio>
				<texture background="true">$INFO[ListItem.Art(title)]</texture>
				<visible>String.IsEmpty(ListItem.Art(snap))</visible>
			</control>
		</control>
	</include>
