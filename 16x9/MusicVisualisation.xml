                            <control type="label" description="Song">
                                <width>100%</width>
                                <height>60</height>
                                <font>MediumBold</font>
                                <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                                <label>$VAR[PlayerTitle]</label>
                            </control>

                            <control type="grouplist">
                                <top>-12</top>
                                <width>100%</width>
                                <height>64</height>
                                <orientation>horizontal</orientation>
                                <align>left</align>
                                <itemgap>24</itemgap>
                                <usecontrolcoords>true</usecontrolcoords>
                                <visible>true</visible>
                               <control type="image">
                                    <posx>-16</posx>
                                    <width>64</width>
                                    <height>64</height>
                                    <colordiffuse>$VAR[ColourHighlight]</colordiffuse>
                                    <texture background="true">flags/$VAR[OSDMusicFlagstar1].png</texture>
                                </control>
                                <control type="image">
                                    <posx>-48</posx>
