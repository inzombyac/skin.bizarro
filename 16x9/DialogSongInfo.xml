<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- songinformation -->
	<defaultcontrol always="true">12</defaultcontrol>
	<controls>
		<!-- Background -->
		<include>DialogBackgroundImage</include>
		<!-- Main group -->
		<control type="group">
			<include>DialogAnimation</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>800</width>
			<height>480</height>
			<!-- Background -->
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>800</width>
				<height>480</height>
				<texture>dialog/song_info_back.png</texture>
			</control>
			<!-- Heading -->
			<control type="label">
				<top>14</top>
				<height>30</height>
				<width>400</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>SmallMedium</font>
				<textcolor>ffdadada</textcolor>
				<label>658</label>
			</control>
			<!-- Icon -->
			<control type="image">
				<left>50</left>
				<top>102</top>
				<width>300</width>
				<height>300</height>
				<texture>$INFO[ListItem.Icon]</texture>
				<aspectratio>scale</aspectratio>
			</control>
			<!-- Rating -->
			<control type="image">
				<left>102</left>
				<top>422</top>
				<width>196</width>
				<height>32</height>
				<texture>$INFO[ListItem.StarRating,stars/,]</texture>
				<colordiffuse>$VAR[ColourHighlight]</colordiffuse>
			</control>
			<!-- Button grouplist -->
			<control id="9000" type="grouplist">
				<right>50</right>
				<bottom>20</bottom>
				<width>300</width>
				<height>400</height>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<itemgap>10</itemgap>
				<align>right</align>
				<!-- Album Info -->
				<control type="button" id="12">
					<width>300</width>
					<font>Button</font>
					<label>Album Info</label>
					<texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
					<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
				</control>
				<!-- Get Thumb Button -->
				<control type="button" id="13">
					<width>300</width>
					<aligny>center</aligny>
					<font>Button</font>
					<label>Choose Thumb</label>
					<texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
					<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
				</control>
				<!-- Change Rating -->
				<control type="button" id="7">
					<width>300</width>
					<font>Button</font>
					<label>Change Rating</label>
					<texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
					<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
				</control>
			</control>
		</control>
	</controls>
</window>