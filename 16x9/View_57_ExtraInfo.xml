<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
    <include name="View_57_ExtraInfo">
        <description>List View (id=57)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(57)</visible>
            <visible>!Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogAlbumInfo.xml)</visible>
            <control type="group">
                <control type="list" id="57">
                    <visible>Container.Content(musicvideos) | Container.Content(artists) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes) | Container.Content(actors) | Container.Content(sets) | Container.Content(seasons) | Container.Content(albums) | Container.Content(songs)</visible>
                    <top>PosterPad</top>
                    <height>PosterH</height>
                    <right>SidePad</right>
                    <width>1100</width>
                    <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                    <onright>60</onright>
                    <onup>57</onup>
                    <ondown>57</ondown>
                    <focusposition>3</focusposition>
                    <movement>3</movement>
                    <pagecontrol>60</pagecontrol>
                    <viewtype label="31147">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <itemlayout width="1100" height="64">
                        <include>50itemlayout</include>
                    </itemlayout>

                    <focusedlayout width="1100" height="64">
                        <control type="group">
                            <visible>Control.HasFocus(57) + !Window.IsVisible(DialogVideoInfo.xml)</visible>
                            <include>50focuslayout</include>
                        </control>
                        <control type="group">
                            <visible>!Control.HasFocus(57) | Window.IsVisible(DialogVideoInfo.xml)</visible>
                            <include>50itemlayout</include>
                        </control>
                    </focusedlayout>
                </control>
                <include>Furniture_Scrollbar</include>
            </control>
            <include>57Info</include>
        </control>
    </include>
    <include name="View_57_ExtraInfo_LowList">
        <description>List View (id=57)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(57)</visible>
            <visible>!Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogAlbumInfo.xml)</visible>
            <control type="group">
                <posy>320</posy>
                <control type="fixedlist" id="57">
                    <visible>Container.Content(musicvideos) | Container.Content(artists) | Container.Content(movies) | Container.Content(tvshows) | [Container.Content(episodes) + !substring(Container.FolderPath,plugin://,left)] | Container.Content(actors) | Container.Content(sets) | Container.Content(seasons) | Container.Content(albums) | Container.Content(songs)</visible>
                    <top>PosterPad</top>
                    <height>320</height>
                    <right>SidePad</right>
                    <width>1100</width>
                    <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                    <onright>60</onright>
                    <onup>57</onup>
                    <ondown>57</ondown>
                    <focusposition>2</focusposition>
                    <movement>2</movement>
                    <pagecontrol>60</pagecontrol>
                    <viewtype label="31147">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <itemlayout width="1100" height="64">
                        <include>50itemlayout</include>
                    </itemlayout>

                    <focusedlayout width="1100" height="64">
                        <control type="group">
                            <visible>Control.HasFocus(57) + !Window.IsVisible(DialogVideoInfo.xml)</visible>
                            <include>50focuslayout</include>
                        </control>
                        <control type="group">
                            <visible>!Control.HasFocus(57) | Window.IsVisible(DialogVideoInfo.xml)</visible>
                            <include>50itemlayout</include>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="60">
                    <onback>50</onback>
                    <centerright>60</centerright>
                    <posy>PosterPad</posy>
                    <height>320</height>
                    <width>8</width>
                    <onleft>50</onleft>
                    <onright condition="!Skin.HasSetting(global.kioskmode)">9000</onright>
                    <texturesliderbackground border="4" colordiffuse="Dark4">scrollbar/scrollv.png</texturesliderbackground>
                    <texturesliderbar border="4" colordiffuse="Dark3">scrollbar/scrollv.png</texturesliderbar>
                    <texturesliderbarfocus border="4" colordiffuse="Dark2">scrollbar/scrollv.png</texturesliderbarfocus>
                    <animation effect="fade" start="100" end="33" time="400" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
                </control>
            </control>
            <include>57Info</include>
        </control>
    </include>
    <include name="57Info">
        <control type="group">
            <left>70</left>
            <width>587</width>
            <top>150</top>
            <height>950</height>
            <control type="group">
                <height>330</height>
                <visible>!Skin.HasSetting(57list.low)</visible>
                <control type="image">
                    <width>100%</width>
                    <height>100%</height>
                    <texture border="10">common/nofocus-shadow10.png</texture>
                     <visible>!Container.Content(episodes)</visible>
                </control>
                <control type="image">
                    <fadetime>200</fadetime>
                    <aspectratio align="center" aligny="center" scalediffuse="false">stretch</aspectratio>
                    <texture background="true">$VAR[LandscapeImage]</texture>
                    <visible>!Container.Content(episodes) + !Skin.HasSetting(views.57.showfanart)</visible>
                </control>
                <control type="image">
                    <fadetime>200</fadetime>
                    <aspectratio align="center" aligny="center" scalediffuse="false">stretch</aspectratio>
                    <texture background="true">$VAR[FanartImage]</texture>
                    <visible>!Container.Content(episodes) + Skin.HasSetting(views.57.showfanart)</visible>
                </control>
                <control type="image">
                    <aspectratio align="left" aligny="center" scalediffuse="false">stretch</aspectratio>
                    <texture background="true">$VAR[LandscapeImage]</texture>
                    <visible>Container.Content(episodes)</visible>
                </control>
				<control type="progress">
					<width>586</width>
					<height>12</height>
					<bottom>0</bottom>
					<info>ListItem.PercentPlayed</info>
					<overlaytexture>-</overlaytexture>
					<texturebg colordiffuse="2f5f5f5f">osd/progress-bg.png</texturebg>
					<lefttexture colordiffuse="EmbyGreen">osd/progress-end.png</lefttexture>
					<midtexture colordiffuse="EmbyGreen">osd/progress-end.png</midtexture>
					<righttexture colordiffuse="PanelWhite70">osd/progress-end.png</righttexture>
					<visible>ListItem.IsResumable</visible>
				</control>
				<control type="group">
					<visible>!ListItem.IsParentFolder</visible>
					<control type="image">
						<right>20</right>
						<centertop>40</centertop>
						<width>40</width>
						<height>40</height>
						<aspectratio aligny="top">keep</aspectratio>
						<texture background="true">$VAR[PosterPercentWatched]</texture>
					</control>
					<control type="group">
						<visible>Integer.IsGreater(ListItem.Property(UnwatchedEpisodes),0)</visible>
						<control type="image">
							<right>20</right>
							<centertop>40</centertop>
							<height>40</height>
							<width>40</width>
							<texture colordiffuse="EmbyGreen">common/circle.png</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="label">
							<right>15</right>
							<centertop>38</centertop>
							<width>50</width>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Property(UnwatchedEpisodes)]</label>
							<font>TwentySix</font>
							<scroll>false</scroll>
							<textcolor>White</textcolor>
						</control>
					</control>
				</control>
            </control>
            <control type="group">
                <left>20</left>
                <right>20</right>
                <posy>330</posy>
                <height>478</height>
                
                <control type="label">
                    <top>10</top>
                    <aligny>center</aligny>
                    <height>64</height>
                    <font>MediumBold</font>
                    <textcolor>Dark1</textcolor>
                    <selectedcolor>Dark1</selectedcolor>
                    <label>$VAR[LabelDirector]</label>
                </control>
                <control type="label">
                    <top>50</top>
                    <height>64</height>
                    <aligny>center</aligny>
                    <font>TwentyEight</font>
                    <textcolor>Dark1</textcolor>
                    <selectedcolor>Dark1</selectedcolor>
                    <label>$VAR[LabelGenre]</label>
                </control>
                <control type="textbox">
                    <top>125</top>			
                    <align>justify</align>
                    <font>TwentyEight</font>
                    <textcolor>Dark1</textcolor>
                    <selectedcolor>Dark1</selectedcolor>
                    <label>$VAR[LabelPlotBox]</label>
                </control>
            </control>
        
        </control>
        
    </include>

</includes>
