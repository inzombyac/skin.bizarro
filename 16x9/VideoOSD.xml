				<top>25</top>
				<right>50</right>
				<height>64</height>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<align>right</align>
				<onleft>17</onleft>
				<onright>4</onright>
				<include>DefOSDUpDown</include>
				<usecontrolcoords>true</usecontrolcoords>
