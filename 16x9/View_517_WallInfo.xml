							<centerright>32</centerright>
							<centertop>32</centertop>
							<height>32</height>
							<width>32</width>
							<texture colordiffuse="EmbyGreen">common/circle.png</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="label">
							<centerright>32</centerright>
							<centertop>32</centertop>
							<height>32</height>
							<width>32</width>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Property(UnwatchedEpisodes)]</label>
							<font>Micro</font>
							<scroll>false</scroll>
							<textcolor>White</textcolor>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="380" width="252">
					<control type="group">
						<control type="button">
							<texturefocus>-</texturefocus>
							<texturenofocus>-</texturenofocus>
							<onfocus condition="Container.Content(movies)">ClearProperty(TVShowID,home)</onfocus>
							<onfocus>Skin.SetString(LastIcon,$VAR[PosterImage])</onfocus>
							<onfocus condition="Container.Content(tvshows)">SetProperty(TVShowID,$INFO[ListItem.DBID],home)</onfocus>
						</control>
						<control type="image">
							<width>100%</width>
							<height>100%</height>
							<texture border="10">common/nofocus-shadow10.png</texture>
						</control>
						<control type="image">
							<left>10</left>
							<top>10</top>
							<right>10</right>
							<bottom>10</bottom>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterImage]</texture>
						</control>
						<control type="progress">
							<left>10</left>
							<height>12</height>
							<width>207</width>
							<bottom>10</bottom>
							<info>ListItem.PercentPlayed</info>
